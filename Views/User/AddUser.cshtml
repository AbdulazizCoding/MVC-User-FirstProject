@model User;

<form>
  <div class="form-group row">
    <label class="col-4"></label>
    <div class="col-8">
      <input asp-for="Name" id="name" name="name" placeholder="Your name" type="text" class="form-control"
        required="required">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-4"></label>
    <div class="col-8">
      <input asp-for="Email" id="email" name="email" placeholder="Your Email" type="text" class="form-control"
        required="required">
    </div>
  </div>
  <div class="form-group row">
    <label class="col-4"></label>
    <div class="col-8">
      <input asp-for="Password" id="password" name="password" placeholder="Your Password" type="text"
        class="form-control" required="required">
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-4 col-8">
      <button name="submit" type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>